                      Action="setValue"
                      ElementPath="/configuration/applicationSettings/TreeDim.StackBuilder.Desktop.Properties.Settings/setting[\[]@name='ReportTemplatePath'[\]]/value"
                      Value="[REPORTTEMPLATES]"/>
        <util:XmlFile Id="SetPalletSolutionsDBPath"
                      File="[StackBuilder]TreeDim.StackBuilder.Desktop.exe.config"
                      Action="setValue"
                      ElementPath="/configuration/applicationSettings/TreeDim.StackBuilder.Desktop.Properties.Settings/setting[\[]@name='PalletSolutionsPath'[\]]/value"
                      Value="[PALLETSOLUTIONSDB]"/>
