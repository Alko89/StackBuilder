            <Directory Id="INSTALLLOCATION" Name="StackBuilder">
              <Directory Id="LOCALIZATION_FR" Name="fr-FR"/>
              <Directory Id="REPORTTEMPLATES" Name="ReportTemplates"/>
              <Directory Id="PALLETSOLUTIONSDB" Name="PalletSolutionsDB"/>
             </Directory>
          </Directory>
        </Directory>
			</Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationShortcutFolder" Name="$(var.Manufacturer)"/>
      </Directory>
      <Directory Id="DesktopFolder">
      </Directory>
    </Directory>
    <!--Properties-->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch PLMPack StackBuilder"/>
    <Property Id="INSTALLDESKTOPSHORTCUT" Value="1" />
    <Property Id="PIDTemplate" Value="????-????-????-????" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLLOCATION"/>
    <Property Id="SERIALNUMBER" Value="    -    -    -    "/>
